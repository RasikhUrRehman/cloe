# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_CHAT_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=cleo_knowledge_base

# Vector Embedding Settings
EMBEDDING_DIMENSION=3072
CHUNK_SIZE=512
CHUNK_OVERLAP=102

# Application Settings
APP_NAME=Cleo RAG Agent
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_SESSION_INACTIVE_MINUTES=30

# Supported Languages
SUPPORTED_LANGUAGES=en,es
DEFAULT_LANGUAGE=en

# Fit Score Weights
QUALIFICATION_WEIGHT=0.30
EXPERIENCE_WEIGHT=0.40
VERIFICATION_WEIGHT=0.30

# File Storage Paths
DATA_DIR=./data
UPLOADS_DIR=./uploads
REPORTS_DIR=./reports
CSV_STORAGE_DIR=./storage

# Report Configuration
REPORT_FORMAT=pdf
INCLUDE_FIT_SCORE_IN_REPORT=false

# Retrieval Configuration
DEFAULT_RETRIEVAL_METHOD=hybrid
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Verification API (Mock)
VERIFICATION_API_ENABLED=false
VERIFICATION_API_URL=https://api.example.com/verify
VERIFICATION_API_KEY=mock_key

# Dashboard Configuration
DASHBOARD_URL=https://dashboard.example.com
DASHBOARD_API_KEY=mock_dashboard_key

# Redis (for session management - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

